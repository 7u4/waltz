<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
                   logicalFilePath="db.changelog-1.40.xml">

    <changeSet id="v1-39.1-tag"
               author="woodjes">
        <tagDatabase tag="v1.39.1"/> <!-- tag the current db version, i.e. the last  -->
    </changeSet>

    <changeSet id="20220209-2505-1"
               author="woodjes">
        <comment>2505: support entity attributes in report grids</comment>
        <dropNotNullConstraint columnDataType="${id.type}"
                               columnName="column_entity_id"
                               tableName="report_grid_column_definition"/>
    </changeSet>

    <changeSet id="20220209-2505-2"
               author="woodjes">
        <comment>2505: support entity attributes in report grids</comment>
        <addColumn tableName="report_grid_column_definition">
            <column name="entity_field_reference_id"
                    type="${id.type}">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20220208-2505-3"
               author="woodjes">
        <comment>2505: create entity_field_reference table</comment>
        <createTable tableName="entity_field_reference">
            <column name="id"
                    type="${id.type}"
                    autoIncrement="true">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="entity_field_reference_pkey"/>
            </column>
            <column name="entity_kind"
                    type="${enum.type}">
                <constraints nullable="false"/>
            </column>
            <column name="field_name"
                    type="${enum.type}">
                <constraints nullable="false"/>
            </column>
            <column name="display_name"
                    type="${name.type}">
                <constraints nullable="false"/>
            </column>
            <column name="description"
                    type="${description.type}">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20220208-2505-4"
               author="woodjes">
        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="APPLICATION"/>
            <column name="field_name" value="kind"/>
            <column name="display_name" value="Asset Kind"/>
            <column name="description" value="The type of asset. e.g. EUC, Third Party, In House"/>
        </insert>
        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="APPLICATION"/>
            <column name="field_name" value="commission_date"/>
            <column name="display_name" value="Commission Date"/>
            <column name="description" value="The date the application was commissioned"/>
        </insert>
        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="APPLICATION"/>
            <column name="field_name" value="planned_retirement_date"/>
            <column name="display_name" value="Planned Retirement Date"/>
            <column name="description" value="The planned retirement date of the application"/>
        </insert>
        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="APPLICATION"/>
            <column name="field_name" value="actual_retirement_date"/>
            <column name="display_name" value="Actual Retirement Date"/>
            <column name="description" value="The actual retirement date of the application"/>
        </insert>

        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="SURVEY_INSTANCE"/>
            <column name="field_name" value="status"/>
            <column name="display_name" value="Status"/>
            <column name="description" value="The status of the survey instance"/>
        </insert>
        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="SURVEY_INSTANCE"/>
            <column name="field_name" value="submitted_at"/>
            <column name="display_name" value="Submitted At"/>
            <column name="description" value="When the survey was submitted"/>
        </insert>
        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="SURVEY_INSTANCE"/>
            <column name="field_name" value="submitted_by"/>
            <column name="display_name" value="Submitted By"/>
            <column name="description" value="Who submitted the survey"/>
        </insert>
        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="SURVEY_INSTANCE"/>
            <column name="field_name" value="approved_at"/>
            <column name="display_name" value="Approved At"/>
            <column name="description" value="When the survey was approved"/>
        </insert>
        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="SURVEY_INSTANCE"/>
            <column name="field_name" value="approved_by"/>
            <column name="display_name" value="Approved By"/>
            <column name="description" value="Who approved the survey"/>
        </insert>
        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="SURVEY_INSTANCE"/>
            <column name="field_name" value="due_date"/>
            <column name="display_name" value="Due Date"/>
            <column name="description" value="The date the survey is due to be submitted"/>
        </insert>
        <insert tableName="entity_field_reference">
            <column name="entity_kind" value="SURVEY_INSTANCE"/>
            <column name="field_name" value="approval_due_date"/>
            <column name="display_name" value="Approval Due Date"/>
            <column name="description" value="The date the survey is due to be approved"/>
        </insert>
    </changeSet>

    <changeSet id="20220210-2505-5"
               author="woodjes">
        <dropIndex tableName="report_grid_column_definition"
                   indexName="idx_rgcd_entity_ref_report_grid_id"/>

        <createIndex tableName="report_grid_column_definition"
                     indexName="idx_rgcd_entity_ref_report_grid_id"
                     unique="true">
            <column name="report_grid_id"
                    type="BIGINT(19)"/>
            <column name="column_entity_kind"
                    type="VARCHAR"/>
            <column name="column_entity_id"
                    type="BIGINT(19)"/>
            <column name="entity_field_reference_id"
                    type="${id.type}"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
