<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
                   logicalFilePath="db.changelog-1.33.xml">

    <changeSet id="20200507-3784-1"
               author="alimuza">
        <comment>3784: Database Usage table</comment>
        <createTable tableName="database_usage">
            <column name="database_id"
                    type="${id.type}">
                <constraints nullable="false" />
            </column>
            <column name="entity_kind"
                    type="${enum.type}">
                <constraints nullable="false" />
            </column>
            <column name="entity_id"
                    type="${id.type}">
                <constraints nullable="false" />
            </column>
            <column name="last_updated_at"
                    type="TIMESTAMP"
                    defaultValueComputed="${now.value}">
                <constraints nullable="false" />
            </column>
            <column name="last_updated_by"
                    type="${name.type}">
                <constraints nullable="false" />
            </column>
            <column name="provenance"
                    type="${provenance.type}">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20200507-3784-2"
               author="alimuza">
        <comment>3784: Added constraint from database usage to database information</comment>
        <addForeignKeyConstraint baseTableName="database_usage"
                                 baseColumnNames="database_id"
                                 constraintName="database_usage_database_id_fk"
                                 onDelete="CASCADE"
                                 referencedTableName="database_information"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="20200507-3784-3"
               author="alimuza">
        <comment>3784: Migrating data from database information to database usage</comment>
        <sql>
            INSERT INTO database_usage (database_id, entity_kind, entity_id, last_updated_by, provenance)
            SELECT di.id, 'APPLICATION', app.id, 'admin', di.provenance
            FROM database_information di
            INNER JOIN application app ON di.asset_code = app.asset_code
        </sql>
    </changeSet>
</databaseChangeLog>
